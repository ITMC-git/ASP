<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="cron_fetch_asp_attendance" model="ir.cron">
            <field name="name">Fetch ASP Attendance</field>
            <field name="model_id" ref="model_hr_attendance"/>
            <field name="state">code</field>
            <field name="code">model.fetch_asp_attendance()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

        <record id="automatic_check_in_cron" model="ir.cron">
            <field name="name">Automatic Check-In/Check-Out</field>
            <field name="model_id" ref="model_daily_reporting"/>
            <field name="state">code</field>
            <field name="code">model.record_first_check_in_and_last_check_out()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

        <record id="cron_create_daily_reporting_records" model="ir.cron">
            <field name="name">Create Unchecked Daily reporting Records</field>
            <field name="model_id" ref="model_daily_reporting"/>
            <field name="state">code</field>
            <field name="code">model.create_unchecked_daily_reporting_records()</field>
            <field name="active">True</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">False</field>
            <field name="nextcall" eval="(datetime.now().replace(hour=6, minute=0, second=0, microsecond=0) + timedelta(days=1))"/>
        </record>
    </data>
</odoo>